		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-ooxml</artifactId>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		<!-- END Reading/writing excel files in java -->
		<dependency>
			<groupId>org.jsystemtest</groupId>
			<artifactId>jsystemApp</artifactId>
		</dependency>
		<dependency>
			<groupId>airspan.testspan.jsystem</groupId>
			<artifactId>airspan.testspan.jsystem.sysobj</artifactId>
		</dependency>
		<dependency>
			<groupId>airspan.testspan.jsystem</groupId>
			<artifactId>sysobj.networking</artifactId>
			<exclusions>
				<exclusion>
					<groupId>airspan.testspan.jsystem</groupId>
					<artifactId>airspan.testspan.jsystem.sysobj</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>airspan.testspan.jsystem</groupId>
			<artifactId>sysobj.ixia</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.collections</groupId>
			<artifactId>google-collections</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>traffic</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>trafficEmulations</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>testCenterEmulations</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>spirent</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>scriptingLanguages</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>protocolAnalyzer</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>customerTraffic</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jsystem.yoram</groupId>
			<artifactId>testCenter</artifactId>
		</dependency>
		<dependency>
