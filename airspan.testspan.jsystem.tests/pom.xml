	<artifactId>airspan.testspan.jsystem.tests</artifactId>
	<parent>
		<groupId>airspan.testspan.jsystem</groupId>
		<artifactId>airspan.testspan.jsystem.parent</artifactId>
		<version>1.21.27</version>
		<relativePath>../airspan.testspan.jsystem.parent</relativePath>
	</parent>

	<dependencies>
		<!-- Reading/writing excel files in java -->
		<dependency>
			<groupId>org.apache.poi</groupId>
